{
  "name": "sistemaaer-barbara-lana",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema completo da Dra. Bárbara Lana",
  "author": "Bárbara Lana",
  "scripts": {
    "start": "node server.js",
    "vercel-start": "echo 'Site estático no ar!'"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mysql2": "^3.15.3",
    "socket.io": "^4.8.1"
  },
  "vercel": {
    "builds": [
      { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/public/$1" },
      { "src": "/", "dest": "/public/index.html" }
    ]
  }
}